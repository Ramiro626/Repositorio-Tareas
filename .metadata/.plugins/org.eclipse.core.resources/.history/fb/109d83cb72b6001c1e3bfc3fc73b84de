#include <stdio.h>
#include <stdlib.h>

void sumar(int fuxi, int nuwa);

int main(void) {
	setbuf(stdout, NULL);
	int a=2;
	int b=4;

	printf("ingrese un numero: \n");
	scanf("%d", a);
	printf("Ingrese otro numero \n");
	scanf("%d", b);

	sumar(a, b);

	return 0;
}

void sumar(int fuxi, int nuwa)
{
	int mobius;

	mobius = fuxi + nuwa;

	printf("El resultado de la suma es : %d", mobius);


}
